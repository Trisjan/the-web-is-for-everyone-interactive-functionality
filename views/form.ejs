<%- include('./partials/head') %>

<%- include('./partials/navbar') %>

<section class="overzicht-nav">
    <a href="/">
        <img src="/assets/arrow-white.svg" 
        alt="Back to overview page">
        <span>OVERZICHT <strong>TEKENMETHODES</strong></span>
    </a>
</section>
<section class="detail-smallnavbar">
    <h1><%= detail.method.title %></h1>
    <ul>
        <li><a href="/method/<%= detail.method.slug %>">Beschrijving</a></li>
        <li><a href="/method/<%= detail.method.slug %>/stappenplan">Stappenplan</a></li>
        <li><a href="/method/<%= detail.method.slug %>/examples">Voorbeelden</a></li>
        <li><a href="/method/<%= detail.method.slug %>/comments">Comments</a></li>
    </ul>
</section>

<section class="form">
    <section class="comment">
        <h2>Comment section</h2>
        <h3 class="message">Het kan 30 seconden duren voor je comment hier staat. <br> Pls druk maar 1x op verzenden.</h3>
        <% form.comments.forEach(comment=> { %>
            <ul>
                <li>
                    <h3>
                        <b>
                            <%= comment.author %>
                        </b>
                        <%= comment.text %>
                    </h3>
                </li>
            </ul>
            <% }) %>
    </section>

    <form action="/method/<%= detail.method.slug %>/form" method="post">
        <% if(locals.error !==undefined){ %>
            <p class="message">
                <%= error %>
            </p>
            <% } %>

                <fieldset>
                    <legend><span></span>Comments hier pls:)</legend>

                    <label for="author">Naam</label>
                    <input required type="text" name="author" id="author" placeholder="..." />

                    <label for="text">Jouw comment</label>
                    <input required type="text" name="text" id="text" placeholder="..." />

                    <label for="methodId"></label>
                    <input type="hidden" name="methodId" id="methodId" value="<%= detail.method.id %>" />

                    <input class="submit-button" type="submit" value="Verzend" />
                </fieldset>
    </form>
</section>



<%- include('./partials/foot') %>