<%- include('./partials/head') %>

<%- include('./partials/navbar') %>

<section class="overzicht-nav">
    <a href="/">
        <img src="/assets/arrow-white.svg" 
        alt="Back to overview page">
        <span>OVERZICHT <strong>TEKENMETHODES</strong></span>
    </a>
</section>
<section class="detail-smallnavbar">
    <h1><%= method.title %></h1>
    <ul>
        <li><a href="/method/<%= method.slug %>">Beschrijving</a></li>
        <li><a href="/method/<%= method.slug %>/stappenplan">Stappenplan</a></li>
        <li><a href="/method/<%= method.slug %>/examples">Voorbeelden</a></li>
        <li><a href="/method/<%= method.slug %>/comments">Comments</a></li>
    </ul>
</section>

<form action="/method/<%= method.slug %>/comment" method="post">
    <% if(locals.error !==undefined){ %>
        <p class="message">
            <%= error %>
        </p>
    <% } %>
    <fieldset>  
        <label for="author">Naam</label>
        <input required type="text" name="author" id="author" placeholder="..." />

        <label for="text">Jouw comment</label>
        <input required type="text" name="text" id="text" placeholder="..." />

        <label for="methodId"></label>
        <input type="hidden" name="methodId" id="methodId" value="<%= method.id %>" />

        <input class="submit-button" type="submit" value="Verzend" />
    </fieldset>
</form>



<%- include('./partials/foot') %>